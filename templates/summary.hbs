</head>

<body>
    <!-- Header -->
    <div class="container mb-3">
        <div class="row">
            <div class="col-12 col-lg-6">
                <div class="row">
                    <div class="col-12 col-lg-4 d-flex p-3 justify-content-center justify-content-lg-start">
                        <img src="http://api.hellohotshot.co/uploads/1708063288253.png" alt="" class="with-in-mobile-50"
                            style="width: 30% !important;
                        @media (max-width:700px){
                            width: 30% !important;
                        }
                        " />
                    </div>
                    <div class="col-12 col-lg-8 p-3 " style="
                    display: flex; 
                    flex-direction: 
                    column; justify-content: 
                    flex-end; align-items: 
                    flex-start;
                    @media (max-width: 700px){
                        align-items: center Im !important;
                    }
                    ">
                        <h4 class="text-center text-lg-start" style="font-size: 33px !important;">project quote</h4>
                        <h1 class="text-center text-lg-start" style="font-size: 64px !important;">${{riderAmount}}</h1>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-4">
                <img src="http://api.hellohotshot.co/uploads/1708063157471.png" class="w-100 mt-5 " alt="">
            </div>
        </div>
    </div>
    <!-- Header -->

    <!-- Nav -->
    {{!-- <div class="container mb-3 mt-3 d-flex f-d-column  justify-content-center p-3 " style="
            @media (max-width:700px){
                flex-direction: column !important;
            }
        ">
        <a href="cargo.html" class="btn btn-secondary m-1 w-100" style="font-size: 23px !important;">cargo</a>
